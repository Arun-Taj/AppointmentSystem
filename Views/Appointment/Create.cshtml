@model AppointmentSystem.Models.Appointment

<h2>Create Appointment</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Officer:</label>
        <select asp-for="OfficerId" asp-items="@(new SelectList(ViewBag.Officers, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Visitor:</label>
        <select asp-for="VisitorId" asp-items="@(new SelectList(ViewBag.Visitors, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Date:</label>
        <input type="date" asp-for="Date" />
    </div>
    <div>
        <label>Start Time:</label>
        <input type="time" asp-for="StartTime" />
    </div>
    <div>
        <label>End Time:</label>
        <input type="time" asp-for="EndTime" />
    </div>
    <button type="submit">Create</button>
</form>
