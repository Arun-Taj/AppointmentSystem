@model IEnumerable<AppointmentSystem.Models.Post>

<h2>All Posts</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Post", new { id = post.Id })">Edit</a> |
                    <form method="post" action="@Url.Action("Deactivate", "Post", new { id = post.Id })">
                        <button type="submit">Deactivate</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Post")">Create New Post</a>
