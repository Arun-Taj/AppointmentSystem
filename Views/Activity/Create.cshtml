@model AppointmentSystem.Models.Activity

<h2>Create Activity</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Type:</label>
        <select asp-for="Type">
            <option value="Leave">Leave</option>
            <option value="Break">Break</option>
        </select>
    </div>
    <div>
        <label>Officer:</label>
        <select asp-for="OfficerId" asp-items="@(new SelectList(ViewBag.Officers, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Start Date:</label>
        <input type="date" asp-for="StartDate" />
    </div>
    <div>
        <label>Start Time:</label>
        <input type="time" asp-for="StartTime" />
    </div>
    <button type="submit">Create</button>
</form>
